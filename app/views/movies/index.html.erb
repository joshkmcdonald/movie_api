<h1 class="page-heading non-card-text">The Results of Your Search for "<%= @search %>"</h1>
<p class="non-card-text">Not the results you were looking for? Try a 
<%= link_to "new search", pages_search_path %>.</p>

<div class="card-columns">
  <% @movies.each do |movie| %>
    <div class="movie-card card">

      <div class="card-header">
        <h5><%= movie.title %></h5>
      </div>
      <%= image_tag "http://image.tmdb.org/t/p/w185//#{movie.poster_path}", class: 'card-img card-img-top img-fluid', alt: 'Card image cap' %>
      <h6 class="small">Overview</h6>
      <p class="card-text"><%= movie.overview %></p>
      <h6 class="small">Release Date</h6>
      <p class="card-text"><%= movie.release_date %></p>
    </div>
  <% end %>
</div>


